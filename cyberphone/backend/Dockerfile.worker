# Worker image with ffmpeg installed
FROM node:18-bullseye-slim

# Install ffmpeg (system binary) and ca-certificates for https
RUN apt-get update && apt-get install -y ffmpeg ca-certificates \
  && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy package files and install (production + dev deps if needed for ffmpeg-installer)
COPY package*.json ./
RUN npm ci

# Copy source
COPY . .

# Worker will run the transcode worker script
CMD ["npm", "run", "worker"]